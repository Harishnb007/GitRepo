<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loancare.lakeview">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--uses-permission android:name="android.permission.USE_FINGERPRINT" /-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" /-->
    <application
        android:allowBackup="true"
        android:icon="@drawable/launchericon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/launchericon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.loancare.lakeview.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name="com.loancare.lakeview.WebActivity"
            android:anyDensity="false"
            android:fitsSystemWindows="true"
            android:hardwareAccelerated="true"
            android:largeScreens="false"
            android:normalScreens="true"
            android:resizeable="false"
            android:screenOrientation="portrait"
            android:smallScreens="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:xlargeScreens="false" />

        <activity
            android:name="com.loancare.lakeview.WebviewActivity"
            android:anyDensity="false"
            android:fitsSystemWindows="true"
            android:hardwareAccelerated="true"
            android:largeScreens="false"
            android:normalScreens="true"
            android:resizeable="false"
            android:screenOrientation="portrait"
            android:smallScreens="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:xlargeScreens="false" />
        <activity
            android:name="com.loancare.lakeview.EnableTouch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CameraFunctionality.MainActivity"
            android:screenOrientation="landscape" />

        <meta-data
            android:name="android.max_aspect"
            android:value="3.0" />

        <activity android:name="com.loancare.lakeview.ForgotPassword_Screen" />

        <activity
            android:name="com.loancare.lakeview.Register_webview"
            android:anyDensity="false"
            android:fitsSystemWindows="true"
            android:hardwareAccelerated="true"
            android:largeScreens="false"
            android:normalScreens="true"
            android:resizeable="false"
            android:screenOrientation="portrait"
            android:smallScreens="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:xlargeScreens="false" />

        <activity
            android:name="com.loancare.lakeview.Help_webview"
            android:anyDensity="false"
            android:fitsSystemWindows="true"
            android:hardwareAccelerated="true"
            android:largeScreens="false"
            android:normalScreens="true"
            android:resizeable="false"
            android:screenOrientation="portrait"
            android:smallScreens="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:xlargeScreens="false" />

        <activity
            android:name="com.loancare.lakeview.LP_webview"
            android:anyDensity="false"
            android:fitsSystemWindows="true"
            android:hardwareAccelerated="true"
            android:largeScreens="false"
            android:normalScreens="true"
            android:resizeable="false"
            android:screenOrientation="portrait"
            android:smallScreens="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:xlargeScreens="false"></activity>
        <activity android:name="com.loancare.lakeview.Privacy_webview"></activity>

