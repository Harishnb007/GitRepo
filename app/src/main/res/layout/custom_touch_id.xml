<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/material_background"
    android:layout_gravity="center"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_200sdp"
    android:background="@drawable/district_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thump_img"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/thump" />

    <TextView
        android:id="@+id/dia_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text=" Touch ID for LoanCare"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/dia_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text="Log on using your fingerprint now"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />


    <LinearLayout
        android:id="@+id/linear_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/district_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

           <TextView
                android:id="@+id/dia_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/_18sdp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>