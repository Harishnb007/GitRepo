<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_220sdp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_for_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:text="Forgot Password ? "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp" />

        <EditText
            android:id="@+id/dialog_edit_loan_id"
            android:layout_width="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLength="14"
            android:hint="Enter  your  Loan  Number"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/Error1_loan_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/dialog_edit_ssn_no"
            android:layout_width="@dimen/_200sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLength="9"
            android:hint="Enter your SSN "
            android:singleLine="true"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/Error1_ssn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/alert_txt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(Enter the last 9 digits of your SSN)"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/dialog_reset_txt"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="A link to reset your password will be\n sent to the email address on file."
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10sdp" />


                <LinearLayout
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/district_background"
                    android:gravity="center">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dial_cancel_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Cancel"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="@dimen/_12sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="#E6E6E6" />

                        <TextView
                            android:id="@+id/dial_submit_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Submit"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                </LinearLayout>

    </LinearLayout>




