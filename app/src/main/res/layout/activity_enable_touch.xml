<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/scan_img"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_80sdp"
            android:background="@drawable/thump" />


        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Simplify your sign-in"
            android:textColor="@color/gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text=" with Touch ID"
            android:textColor="@color/gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="It's now easier, faster and more secure\n to access your mortgage.  "
            android:textColor="@color/gray"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:textAlignment="center"
            android:textColor="@color/errorText"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/enable_touch"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/signbtn"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_35sdp">

        <TextView
            android:id="@+id/touch_txt"
            android:text="Yes Enable Touch ID"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/notnow_txt"
        android:text="Not Now"
        android:textColor="@color/signbtn"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@color/signbtn"
        android:layout_gravity="center"
        android:layout_width="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="@dimen/_1sdp" />


</LinearLayout>
